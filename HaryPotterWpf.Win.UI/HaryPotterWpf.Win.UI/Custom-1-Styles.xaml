<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="backgroundColor" Color="DarkOrange"></SolidColorBrush>

    <Style x:Key="buttonColorBackground" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource backgroundColor}"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="Yellow"></Setter>
                <Setter Property="BorderThickness" Value="10"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>